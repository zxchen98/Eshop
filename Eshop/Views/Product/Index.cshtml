@model IEnumerable<Product>
@{
}
<h1>List of Product</h1>
<a asp-controller="Product" asp-action="Create">Add New Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="delete" asp-route-id="@m.Id" class="btn-danger btn">Delete</a>
                    <a asp-controller="Product" asp-action="edit" asp-route-id="@m.Id" class="btn-warning btn">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>